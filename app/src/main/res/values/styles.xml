<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CustomTextAppearanceTab" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <!-- Customize color of navigation drawer icon and back arrow -->
        <item name="colorControlNormal">@color/drawable_color</item>
        <item name="background">@color/barBackColor</item>
        <item name="titleTextColor">@color/drawable_color</item>
    </style>

    <style name="Widget.ContactHeading.TextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:typeface">normal</item>
        <item name="android:textAppearance">?attr/textAppearanceSearchResultTitle</item>
    </style>

    <style name="Widget.ContactBody.TextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/contact_numColor</item>
        <item name="android:textAppearance">?attr/textAppearanceHeadline3</item>
    </style>

</resources>